<h1>Edit book "{{book.title}}"</h1>
<div class="container">
    <form action="/books/edit/{{book.id}}/?_method=PUT" method="POST">
        <div class="row">

            <div class="three columns">
                <label for="title">Title</label>
                <input id="title" name="title" value="{{book.title}}" required type="text">
            </div>
            <div class="three columns">
                <label for="author">Author</label>
                <input id="author" type="text" name="author" value="{{book.author}}">
            </div>
            <div class="three columns">
                <label for="pages">Number of pages</label>
                <input id="pages" min="0" type="number" value="{{book.pages}}" name="pages">
            </div>
            <div class="three columns">
                <label for="status">Status </label>
                <select id="status" name="status">

                    <option {{selected book.status "read"}} value="read">Read</option>
                    <option {{selected book.status "not read"}} value="not read">Not read</option>
                </select>
            </div>

        </div>
        <input class="button-primary" id="addBook" type="submit" value="save">

    </form>
    {{>go-home }}
</div>
